              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 9.4034,\n  \"longitude\": -0.8424,\n  \"radius\": 10,\n  \"available_only\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/stations/nearby",
              "host": ["{{base_url}}"],
              "path": ["api", "stations", "nearby"]
            },
            "description": "Find only available LPG stations"
          },
          "response": []
        },
        {
